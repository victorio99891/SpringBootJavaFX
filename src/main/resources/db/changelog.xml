<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">


    <changeSet id="my_test_db_1" author="wkrzyzanowski">

        <createTable tableName="QUESTIONS">
            <column name="QUESTION_ID" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="CONTENT" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="ANSWERS">
            <column name="ANSWER_ID" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="CONTENT" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="QUESTION_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="ANSWERS" baseColumnNames="QUESTION_ID" constraintName="FK_QUESTION_ID"
                                 referencedTableName="QUESTIONS"
                                 referencedColumnNames="QUESTION_ID"/>

        <sqlFile dbms="h2"
                 encoding="utf8"
                 path="data.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

</databaseChangeLog>